<div class="section">
  <div class="container">
    <h1>Articles</h1>
    <div class="card">
      <div class="card-content">
        <p class="title is-4"><%= link_to "New Article", new_article_path %></p>
      </div>
    </div>
    <% @articles.each do |article| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to article.title, article %></p>
            </div>
          </div>
          <div class="content">
            <%= article.body %>
          </div>
          <div class="author">
            <span class="tag is-rounded"><%= article.user.email %> </span>
          </div>
          <div class="comment-count">
            <span class="tag is-rounded"><%= article.comments.count %> comments</span>
          </div>
          <br>
          <div class="container">
            <%= link_to "Edit", edit_article_path(article), class:"button" %>
            <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
